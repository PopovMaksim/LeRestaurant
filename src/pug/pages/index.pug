                                p(class="allerg-amount item-right") 4,8,17
                        section(class="menu-item")
                            img(src="img/pasta.png" alt="pasta")
                            section(class="title-price")
                                h4(class="name-dish item-left") Pasta with tomato puree
                                p(class="price item-right") 12$
                            section(class="allergens")
                                p(class="allerg item-left") Allergens
                                p(class="allerg-amount item-right") 2,6
                        section(class="menu-item")
                            img(src="img/salad.png" alt="salad")
