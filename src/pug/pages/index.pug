        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='css/style.css')
        title LeRestaurant

    body
        header(id='typeoffood')
            div(class='typefood')
                section
                    section(class='food-meat')
                    section(class='food-secrets')
                section(class='food-vegeterian')
            div(class='typefood-nameplate')
                section(class='nameplate')
                    h2 
                        | for meat
