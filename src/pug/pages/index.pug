                                p(class="allerg-amount item-right") 4,9
                        section(class="menu-item")
                            img(src="img/soup.png" alt="soup")
                            section(class="title-price")
                                h4(class="name-dish item-left") Mushroom soup
                                p(class="price item-right") 9$
                            section(class="allergens")
                                p(class="allerg item-left") Allergens
                                p(class="allerg-amount item-right") 1,3,11
                        section(class="menu-item")
                            img(src="img/chicken.png" alt="chicken")
